{
  "name": "hmpps-dpr-tools-ui",
  "version": "0.0.1",
  "description": "HMPPS DPR Tools UI",
  "repository": "git@github.com:ministryofjustice/hmpps-dpr-tools-ui.git",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "copy-views": "cp -R server/views dist/server/",
    "build": "node esbuild/esbuild.config.js --build",
    "start": "node $NODE_OPTIONS dist/server.js | bunyan -o short",
    "start:dev": "concurrently -k -p \"[{name}]\" -n \"ESBuild,Node\" -c \"yellow.bold,cyan.bold\" \"node esbuild/esbuild.config.js --build --watch\" \"node esbuild/esbuild.config.js --dev-server\"",
    "start-feature": "export $(cat feature.env) && node $NODE_DEBUG_OPTION dist/server.js | bunyan -o short",
    "start-feature:dev": "export $(cat feature.env) && concurrently -k -p \"[{name}]\" -n \"ESBuild,Node\" -c \"yellow.bold,cyan.bold\" \"node esbuild/esbuild.config.js --build --watch\" \"node esbuild/esbuild.config.js --dev-test-server\"",
    "lint": "eslint . --cache --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc && tsc -p integration_tests",
    "test": "jest --coverage",
    "test:ci": "jest --runInBand",
    "security_audit": "npx audit-ci --config audit-ci.json",
    "int-test": "cypress run --config video=false",
    "int-test-ui": "cypress open",
    "clean": "rm -rf dist build node_modules stylesheets",
    "setup": "npm ci && hmpps-npm-script-run-allowlist"
  },
  "engines": {
    "node": "^22",
    "npm": ">=10 <12"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "isolatedModules": true
        }
      ]
    },
    "collectCoverageFrom": [
      "server/**/*.{ts,js,jsx,mjs}"
    ],
    "testMatch": [
      "<rootDir>/(server|job)/**/?(*.)(cy|test).{ts,js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test_results/jest/"
        }
      ],
      [
        "./node_modules/jest-html-reporter",
        {
          "outputPath": "test_results/unit-test-reports.html"
        }
      ]
    ],
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "node",
      "ts"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      ".circleci/*",
      "migrations/*",
      "node_modules/*",
      "test/*",
      "integration_tests/*"
    ],
    "delay": 2500,
    "ext": "js,json,html,njk"
  },
  "lint-staged": {
    "*.{ts,js,css}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@ministryofjustice/frontend": "^3.3.1",
    "@ministryofjustice/hmpps-digital-prison-reporting-frontend": "^4.20.1",
    "agentkeepalive": "^4.6.0",
    "applicationinsights": "^2.9.3",
    "basic-auth": "^2.0.1",
    "bunyan": "^1.8.15",
    "bunyan-format": "^0.2.1",
    "chart.js": "^4.4.7",
    "chartjs-plugin-datalabels": "^2.2.0",
    "compression": "^1.7.5",
    "connect-flash": "^0.1.1",
    "connect-redis": "^7.1.1",
    "cors": "^2.8.5",
    "csrf-sync": "^4.2.1",
    "dayjs": "^1.11.13",
    "express": "^5.1.0",
    "express-prom-bundle": "^7.0.0",
    "express-session": "^1.18.1",
    "govuk-frontend": "^5.8.0",
    "helmet": "^8.0.0",
    "http-errors": "^2.0.0",
    "is-plain-object": "^5.0.0",
    "jose": "^6.1.0",
    "jwt-decode": "^3.1.2",
    "multer": "2.0.2",
    "nocache": "^4.0.0",
    "nunjucks": "^3.2.4",
    "passport": "^0.7.0",
    "passport-oauth2": "^1.7.0",
    "prom-client": "^15.1.3",
    "redis": "^5.8.3",
    "superagent": "^10.2.1",
    "url-value-parser": "^2.2.0",
    "uuid": "^11.1.0",
    "vitest": "^3.2.4"
  },
  "devDependencies": {
    "@ministryofjustice/hmpps-npm-script-allowlist": "0.0.3",
    "@types/basic-auth": "^1.1.8",
    "@types/bunyan": "^1.8.9",
    "@types/bunyan-format": "^0.2.6",
    "@types/compression": "^1.7.3",
    "@types/connect-flash": "0.0.40",
    "@types/cookie-session": "^2.0.49",
    "@types/cors": "^2.8.19",
    "@types/csurf": "^1.11.3",
    "@types/express-session": "^1.18.1",
    "@types/fs-extra": "^11.0.4",
    "@types/http-errors": "^2.0.2",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.14.1",
    "@types/nunjucks": "^3.2.6",
    "@types/nunjucks-date": "^0.0.10",
    "@types/parseurl": "^1.3.3",
    "@types/passport": "^1.0.17",
    "@types/passport-oauth2": "^1.4.17",
    "@types/querystringify": "^2.0.2",
    "@types/superagent": "^8.1.9",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "audit-ci": "^7.1.0",
    "chokidar": "^3.6.0",
    "concurrently": "^9.1.2",
    "cookie-session": "^2.0.0",
    "cypress": "^14.3.1",
    "cypress-multi-reporters": "^2.0.5",
    "dotenv": "^16.4.7",
    "esbuild": "^0.25.8",
    "esbuild-plugin-clean": "^1.0.1",
    "esbuild-plugin-copy": "^2.1.1",
    "esbuild-plugin-manifest": "^1.0.5",
    "esbuild-sass-plugin": "^3.3.1",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-cypress": "^3.6.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-no-only-tests": "^3.3.0",
    "eslint-plugin-prettier": "^5.2.6",
    "glob": "^11.0.3",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-html-reporter": "^3.10.2",
    "jest-junit": "^16.0.0",
    "jsonwebtoken": "^9.0.2",
    "lint-staged": "^15.3.0",
    "mocha-junit-reporter": "^2.2.1",
    "nock": "^14.0.4",
    "nodemon": "^3.1.10",
    "prettier": "^3.4.2",
    "prettier-plugin-jinja-template": "^2.0.0",
    "sass": "^1.81.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.3"
  }
}
